<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

<style>
  :root { --brand-dark: #1a1a1a; }
  
  /* Section Headers */
  .contact-header h1 { letter-spacing: -1px; }
  
  /* Contact Card Styling */
  .info-card {
    background: #fff;
    border: 1px solid #eee !important;
    transition: transform 0.3s ease;
  }
  .icon-box {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--brand-dark);
    color: #fff;
    border-radius: 12px;
  }

  /* Form Styling */
  .form-floating > .form-control:focus {
    border-color: var(--brand-dark);
    box-shadow: none;
  }
  .form-floating > label { color: #999; }
  
  .btn-submit {
    background: var(--brand-dark);
    border: none;
    color: #fff;
    padding: 1rem;
    letter-spacing: 1px;
    text-transform: uppercase;
    font-size: 0.85rem;
    transition: opacity 0.2s;
  }
  .btn-submit:hover { background: #333; color: #fff; }

  /* Map Container */
  .map-wrapper {
    filter: grayscale(100%) contrast(1.2) opacity(0.8);
    transition: filter 0.5s ease;
    border: 1px solid #eee;
  }
  .map-wrapper:hover { filter: grayscale(0%); }
</style>

<div class="container py-5">
  <div class="text-center mb-5 contact-header">
    <h1 class="fw-bold display-5 mb-2">Get In Touch</h1>
    <p class="text-muted mx-auto" style="max-width: 500px;">
      Whether you have a question about our products, shipping, or anything else, our team is ready to answer all your questions.
    </p>
  </div>

  <div class="row g-5">
    <div class="col-lg-5">
      <div class="info-card p-4 rounded shadow-sm h-100">
        <div class="d-flex align-items-center mb-4">
          <div class="icon-box me-3">
            <i class="fa-solid fa-location-dot"></i>
          </div>
          <h4 class="fw-bold m-0">Our Studio</h4>
        </div>
        
        <p class="text-secondary mb-4" style="line-height: 1.8;">
          <strong>CUI (COMSATS University)</strong><br>
          <span class="opacity-75">Defence Road, Off Raiwind Road,<br>
          Lahore, Pakistan.</span>
        </p>

        <hr class="my-4 opacity-25">

        <div class="d-flex flex-column gap-3">
          <div class="d-flex align-items-center gap-3">
            <i class="fa-solid fa-envelope text-muted"></i>
            <a href="mailto:info@awesomeshop.com" class="text-decoration-none text-dark fw-medium">
              info@awesomeshop.com
            </a>
          </div>

          <div class="d-flex align-items-center gap-3">
            <i class="fa-solid fa-phone text-muted"></i>
            <a href="tel:+923001234567" class="text-decoration-none text-dark fw-medium">
              +92 300 123 4567
            </a>
          </div>
        </div>

        <div class="mt-5">
          <h6 class="fw-bold text-uppercase small mb-3">Follow Us</h6>
          <div class="d-flex gap-3">
            <a href="#" class="text-dark opacity-50"><i class="fa-brands fa-instagram fa-lg"></i></a>
            <a href="#" class="text-dark opacity-50"><i class="fa-brands fa-twitter fa-lg"></i></a>
            <a href="#" class="text-dark opacity-50"><i class="fa-brands fa-facebook fa-lg"></i></a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-7">
      <div class="bg-white p-4 p-md-5 rounded shadow-sm border">
        <h3 class="fw-bold mb-4">Send us a message</h3>
        
        <form action="/contact-us" method="POST">
          <div class="row g-3">
            <div class="col-md-6">
              <div class="form-floating">
                <input type="text" class="form-control" id="name" name="name" placeholder="Your Name" required>
                <label for="name">Your Name</label>
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="form-floating">
                <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
                <label for="email">Email Address</label>
              </div>
            </div>

            <div class="col-12">
              <div class="form-floating">
                <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject">
                <label for="subject">Subject</label>
              </div>
            </div>

            <div class="col-12">
              <div class="form-floating">
                <textarea class="form-control" placeholder="Leave a message here" id="message" name="message" style="height: 150px" required></textarea>
                <label for="message">Message</label>
              </div>
            </div>

            <div class="col-12 pt-2">
              <button class="btn btn-submit w-100 rounded-pill" type="submit">
                Send Message
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="mt-5 mb-5 rounded map-wrapper overflow-hidden shadow-sm">
    <iframe 
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3405.000000000!2d74.0000000!3d31.0000000!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzHCsDAwJzAwLjAiTiA3NMKwMDAnMDAuMCJF!5e0!3m2!1sen!2spk!4v123456789" 
      width="100%" 
      height="400" 
      style="border:0;" 
      allowfullscreen="" 
      loading="lazy">
    </iframe>
  </div>
</div>