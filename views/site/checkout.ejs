<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h3 fw-bold mb-1">Checkout</h1>
      <p class="text-muted mb-0">Confirm your order.</p>
    </div>
    <a href="/cart" class="btn btn-outline-secondary">‚Üê Back to Cart</a>
  </div>

  <%
    const cartItems = (typeof items !== 'undefined' && Array.isArray(items)) ? items : [];
    const money = (n) => Number(n || 0).toFixed(2);
  %>

  <% if (!cartItems || cartItems.length === 0) { %>
    <div class="alert alert-light border">Your cart is empty.</div>
    <a href="/" class="btn btn-primary">Shop Now</a>
  <% } else { %>

    <div class="card border-0 shadow-sm mb-3">
      <div class="card-body">
        <ul class="list-group list-group-flush">
          <% cartItems.forEach(function(it){ 
               const p = it.product;
               const name = p ? p.name : 'Unknown Product';
               const qty = Number(it.qty || 1);
               const lineTotal = Number(it.lineTotal || 0);
          %>
            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
              <div>
                <div class="fw-semibold"><%= name %></div>
                <div class="text-muted small">Qty: <%= qty %></div>
              </div>
              <div class="fw-semibold">$<%= money(lineTotal) %></div>
            </li>
          <% }) %>
        </ul>

        <hr />

        <div class="d-flex justify-content-between">
          <div class="fw-semibold">Total</div>
          <div class="fw-bold">$<%= money(total) %></div>
        </div>

        <form method="POST" action="/checkout" class="mt-3">
          <button class="btn btn-success w-100">Place Order</button>
        </form>

        <div class="text-muted small mt-2 text-center">
          (Payment integration can be added next.)
        </div>
      </div>
    </div>

  <% } %>
</div>
